{
  "name": "lifter",
  "description": "Electron Local Proxy for Fiddler users",
  "version": "0.0.1",
  "author": "@kyo_ago",
  "bugs": "https://github.com/kyo-ago/lifter/issues",
  "dependencies": {
    "@reactivex/rxjs": "^5.0.0-rc.4",
    "browserify": "^13.1.1",
    "electron-sudo": "^4.0.12",
    "electron-window-state": "^3.1.0",
    "eventemitter2": "^2.2.0",
    "http-mitm-proxy": "^0.5.1",
    "mime": "^1.3.4",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-redux": "^4.4.6",
    "redux": "^3.6.0",
    "regenerator-runtime": "^0.10.0",
    "remote": "^0.2.6",
    "typescript-dddbase": "0.0.2"
  },
  "devDependencies": {
    "@types/electron": "^1.4.27",
    "@types/eventemitter2": "^2.2.0",
    "@types/mime": "0.0.29",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.48",
    "@types/react": "^0.14.49",
    "@types/react-dom": "^0.14.18",
    "@types/react-redux": "^4.4.32",
    "@types/redux": "^3.6.31",
    "electron": "^1.4.7",
    "electron-builder": "^8.6.0",
    "electron-packager": "^8.3.0",
    "fixpack": "^2.3.1",
    "mocha": "^3.1.2",
    "mock-fs": "^3.12.1",
    "mock-require": "^2.0.0",
    "npm-check-updates": "^2.8.6",
    "typescript": "^2.0.10"
  },
  "homepage": "https://github.com/kyo-ago/lifter/",
  "keywords": [
    "electron",
    "local proxy",
    "proxy"
  ],
  "license": "GPL-3.0",
  "main": "build/index.js",
  "repository": "kyo-ago/lifter",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "fix": "fixpack",
    "ncu": "ncu",
    "prebuild": "rm -fr ./app && cp -a ./template-app ./app",
    "pretest": "tsc -p ./tsconfig_test.json",
    "rust": "cd ./rust/ && rm -f proxy-setting && rustc proxy-setting.rs",
    "rustinstall": "curl -sSf https://static.rust-lang.org/rustup.sh | sh",
    "start": "electron app",
    "test": "mocha build/test/**/*-test.js",
    "watch": "tsc -p ./tsconfig.json --watch",

    "clean": "rm -rf ./app",
    "clean:osx": "rm -rf ./app/osx",
    "clean:win": "rm -rf ./app/win",

    "pack": "npm run build && npm run pack:osx && npm run build:win",
    "pack:osx": "npm run clean:osx && electron-packager app \"Lifter Proxy\" --out=dist/osx --platform=darwin --arch=x64 --version=0.0.1 --icon=assets/osx/icon.icns",
    "pack:win": "npm run clean:win && electron-packager app \"Lifter Proxy\" --out=dist/win --platform=win32 --arch=ia32 --version=0.0.1 --icon=assets/win/icon.ico",

    "dist": "npm run dist:osx && npm run dist:win",
    "dist:osx": "npm run pack:osx && electron-builder \"dist/osx/Lifter Proxy-darwin-x64/Lifter Proxy.app\" --platform=osx --out=\"dist/osx\" --config=builder.json",
    "dist:win": "npm run pack:win && electron-builder \"dist/win/Lifter Proxy-win32-ia32\" --platform=win --out=\"dist/win\" --config=builder.json",

    "archive": "npm run archive:osx && npm run archive:win",
    "archive:osx": "npm run dist:osx && zip -j \"dist/osx/Lifter-Proxy-osx.zip\" \"dist/osx/Lifter Proxy.dmg\"",
    "archive:win": "npm run dist:win && zip -j \"dist/win/Lifter-Proxy-win.zip\" \"dist/win/Lifter Proxy Setup.exe\""

  }
}
